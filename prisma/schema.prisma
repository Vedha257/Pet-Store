generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Customer{
  id  String @id @default(cuid())
  name  String
  address String?
  phoneNo Int
  email String
}

model Pets{
  id String @id @default(cuid())
  type String
  breed String
  age Int
  price Float
}

model Purchase{
  id String @id @default(cuid())
  // customerId Customer @relation()
  mode  String 
  date DateTime @default(now())
}

model Stock{
  id String @id @default(cuid())
  petFood String
}